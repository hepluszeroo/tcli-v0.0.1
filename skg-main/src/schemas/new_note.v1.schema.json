{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NewNote",
  "description": "Event emitted when a new note is created in Tangent",
  "type": "object",
  "required": ["note_id", "content", "author_id", "timestamp"],
  "properties": {
    "note_id": {
      "type": "string",
      "description": "Unique identifier for the note",
      "format": "uuid"
    },
    "content": {
      "type": "string",
      "description": "The full text content of the note",
      "minLength": 1,
      "maxLength": 1000000
    },
    "author_id": {
      "type": "string",
      "description": "Identifier of the note's author",
      "format": "uuid"
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of when the note was created",
      "format": "date-time"
    },
    "metadata": {
      "type": "object",
      "description": "Additional contextual information about the note",
      "properties": {
        "title": {
          "type": "string",
          "description": "Optional title of the note"
        },
        "tags": {
          "type": "array",
          "description": "Tags associated with the note",
          "items": {
            "type": "string"
          }
        },
        "workspace_id": {
          "type": "string",
          "description": "Identifier of the workspace containing the note",
          "format": "uuid"
        },
        "path": {
          "type": "string",
          "description": "File path of the note within the workspace"
        }
      }
    },
    "event_id": {
      "type": "string",
      "description": "Unique identifier for this event",
      "format": "uuid"
    }
  }
}